<h1><%= @book.book.title %></h1>
<% if @book.image.attached? %>
    <%= cl_image_tag @book.image.key, crop: :scale, width: 300, cloud_name: ENV['CLOUDINARY_CLOUD_NAME'] %>
  <% else %>
    <%= image_tag("no_image.png") %>
<% end %>
<h3>Owned by: <%= @book.user.email %></h3>
<h3>Condition: <%= @book.condition %></h3>
<h3>Format: <%= @book.format %></h3>
<h3>Owner Note: <%= @book.owner_note %></h3>


<%= link_to "I want this book!", new_request_path + "?requestee_book_id=#{@book.id}" %>